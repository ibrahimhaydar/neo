<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/normal_margin"
    android:foreground="?android:selectableItemBackground"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/portfolio_item_height"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/normal_radius"
        android:background="@drawable/round_rect_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:padding="@dimen/margin_start_end"
         >

         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_gravity="center"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             >

             <com.projects.neo.data.util.custom.CustomTextViewBold
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:maxLines="1"
                 android:textAlignment="viewStart"
                 android:layout_marginEnd="@dimen/medium_margin"
                 android:textSize="@dimen/big_text"
                 android:layout_gravity="start"
                 android:gravity="start"
                 android:textColor="@color/text_gray_dark"
                 android:id="@+id/tvPortfolioName"/>

             <com.projects.neo.data.util.custom.CustomTextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/tvInvestmentType"
                 android:textColor="@color/text_gray_dark"
                 android:textSize="@dimen/normal_text"
                 android:layout_gravity="start"
                 android:gravity="start"
                 android:textAlignment="viewStart"
                 android:layout_marginTop="@dimen/normal_margin"
                 />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             >

             <com.projects.neo.data.util.custom.CustomTextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:maxLines="1"
                 android:textSize="@dimen/big_text"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:textColor="@color/text_gray_dark"
                 android:id="@+id/tvBalance"/>

             <com.projects.neo.data.util.custom.CustomTextView
                 android:id="@+id/tvLatestDailyEarning"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginTop="@dimen/normal_margin"
                 android:gravity="center"
                 android:textColor="@color/text_gray_dark"
                 android:textSize="@dimen/normal_text" />
         </LinearLayout>

     </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>


